{
  "$schema": "http://json-schema.org/schema#",
  "id": "https://raw.githubusercontent.com/ihh/acidbot/master/schema/machine.json",
  "description": "Acidbot transducer schema",
  "type": "object",
  "required": ["state"],
  "properties": {
    "state": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "not": {
              "type": "number"
            }
          },
          "n": {
            "type": "number"
          },
          "trans": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["to"],
              "properties": {
                "to": {},
                "in": { "type": "string" },
                "out": { "type": "string" },
                "weight": { "$ref": "https://raw.githubusercontent.com/ihh/acidbot/master/schema/expr.json" }
              },
              "additionalProperties": false
            }
          }
        },
        "anyOf": [ {"required": ["id"]}, {"required": ["n"]} ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
